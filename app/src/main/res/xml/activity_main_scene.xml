<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/fab"
               motion:framePosition="40"
               android:alpha="0" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/month_dashboard"
            motion:dragDirection="dragDown"
            motion:touchAnchorSide="bottom"

            />
    </Transition>

    <ConstraintSet android:id="@+id/start">


        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@+id/total_month_text"
            android:layout_marginTop="8dp"
            motion:layout_constraintBottom_toBottomOf="@+id/month_dashboard"
            motion:layout_constraintEnd_toEndOf="@+id/total_month_text"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/total_month_text"
            android:id="@+id/total_month_value" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            motion:layout_constraintVertical_bias="0.637"
            motion:layout_constraintTop_toBottomOf="@+id/dates"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:id="@+id/recent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">


    </ConstraintSet>
</MotionScene>